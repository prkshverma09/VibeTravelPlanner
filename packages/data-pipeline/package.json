{
  "name": "@vibe-travel/data-pipeline",
  "version": "0.1.0",
  "description": "Data generation, transformation, and Algolia indexing for Vibe-Check Travel Planner",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "bin": {
    "vibe-pipeline": "./dist/cli/index.js"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/cli/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts src/cli/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "generate": "node dist/cli/index.js generate",
    "upload": "node dist/cli/index.js upload",
    "configure": "node dist/cli/index.js configure",
    "prebuild:cli": "pnpm run build"
  },
  "dependencies": {
    "@vibe-travel/shared": "workspace:*",
    "algoliasearch": "^4.22.1",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "openai": "^4.24.1",
    "p-limit": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "keywords": [
    "travel",
    "algolia",
    "data-pipeline",
    "indexing"
  ],
  "author": "",
  "license": "MIT"
}
