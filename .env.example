# Vibe-Check Travel Planner - Environment Variables
# Copy this file to .env and fill in your values

# ===========================================
# ALGOLIA CONFIGURATION (Required for all packages)
# ===========================================

# Algolia Application ID (found in Algolia Dashboard > Settings > API Keys)
ALGOLIA_APP_ID=your_algolia_app_id

# Algolia Admin API Key (for data-pipeline - has write access)
# WARNING: Keep this secret! Never expose in frontend code.
ALGOLIA_ADMIN_KEY=your_algolia_admin_api_key

# Algolia Search-Only API Key (for frontend - read-only access)
ALGOLIA_SEARCH_KEY=your_algolia_search_api_key

# Algolia Index Name (default: travel_destinations)
ALGOLIA_INDEX_NAME=travel_destinations

# Algolia Agent ID (for Agent Studio chat integration)
ALGOLIA_AGENT_ID=your_algolia_agent_id

# ===========================================
# OPENAI CONFIGURATION (Required for data-pipeline)
# ===========================================

# OpenAI API Key (for LLM enrichment)
OPENAI_API_KEY=your_openai_api_key

# OpenAI Model (optional, default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# ===========================================
# FRONTEND CONFIGURATION
# ===========================================

# These are exposed to the browser (prefixed with NEXT_PUBLIC_)
NEXT_PUBLIC_ALGOLIA_APP_ID=your_algolia_app_id
NEXT_PUBLIC_ALGOLIA_SEARCH_KEY=your_algolia_search_api_key
NEXT_PUBLIC_ALGOLIA_AGENT_ID=your_algolia_agent_id

# ===========================================
# QUERY ENHANCEMENT (Optional - for improved search)
# ===========================================

# OpenAI API Key (enables LLM-based query enhancement for better search results)
# If not set, the system will use local synonym expansion only
# OPENAI_API_KEY=your_openai_api_key

# ===========================================
# E2E TESTING CONFIGURATION
# ===========================================

# Frontend URL for E2E tests
FRONTEND_URL=http://localhost:3000

# ===========================================
# DATA PIPELINE CONFIGURATION (Optional)
# ===========================================

# Number of cities to generate (default: 50)
CITY_COUNT=50

# Enable dry-run mode (default: false)
DRY_RUN=false

# Output file for generated data
OUTPUT_FILE=./output/cities.json
